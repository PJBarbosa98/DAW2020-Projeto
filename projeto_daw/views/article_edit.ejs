<nav class="navbar navbar-light bg-light">
	<div class="container-fluid">
		<span class="navbar-brand mb-0 h1 mx-auto">
			<h1><b>Digital Library</b></h1>
		</span>
	</div>

	<div class="text-center mx-auto">
		<pre">Edit post by <%= name %>.</pre>
	</div>
</nav>

<div class="row mt-5">
	<div class="col-md-6 m-auto">
		<div class="card card-body">
			<h1 class="text-center mb-3"><i class="fas fa-newspaper"></i> Edit Article</h1>
			<%- include ('./partials/messages') %>
			<form action="articles" method="POST" enctype="multipart/form-data">
				<div class="form-group">
					<label for="title">Title</label>
					<input
						type="text"
						id="title"
						name="title"
						class="form-control"
						value="<%= article.title %>"
					/>
				</div>
				<div class="form-group">
					<label for="title">Category</label>
					<input
						type="text"
						id="category"
						name="category"
						class="form-control"
						value="<%= article.category %>"
					/>
				</div>
				<div class="form-group">
					<label for="title">Set to Private</label>
					<br>
					<div class="form-check form-check-inline">
						<input class="form-check-input" type="radio" name="private"
						id="false" value="false">
						<label class="form-check-label" for="false">False</label>
					</div>
					<div class="form-check form-check-inline">
						<input class="form-check-input" type="radio" name="private"
						id="true" value="true">
						<label class="form-check-label" for="true">True</label>
					</div>
				</div>
				<div class="form-group">
					<label for="title">Tags</label>
					<input
						type="text"
						id="tags"
						name="tags"
						class="form-control"
						value="<%= article.tags %>"
					/>
				</div>
				<div class="form-group">
					<label for="title">Date</label>
					<input
						type="text"
						id="date"
						name="date"
						class="form-control"
						value="<%= String(article.date).substr(0, 16) %>"
					/>
				</div>

				<div class="form-group">
					<div class="mb-3">
						<label for="formFile" class="form-label">Old Deliverables</label>
						<div class="card">
							<div class="card-body">
								<%= article.deliverables %>
							</div>
						</div>
					</div>
				</div>

				<div class="form-group">
					<div class="mb-3">
						<label for="formFile" class="form-label">Add a Deliverable</label>
						<input
							type="file"
							id="deliverables"
							name="deliverables"
							class="form-control"
						>
					</div>
				</div>

				<div class="newFiles"></div>

				<button type="button" class="btn btn-secondary" onclick='newDeliverable()'>
					+1 Deliverable
				</button>
				
				<button type="submit" class="btn btn-primary btn-block mt-2">Edit</button>
			</form>
		</div>
		<a href="/dashboard" class="btn btn-secondary btn-block mb-2">
			Go Back
		</a>
	</div>
</div>